    src/web_interface_backend/web_interface_backend/web_interface_node.py,
    src/perception_nodes/perception_nodes/synthetic_camera_node.py,
    src/web_interface_backend/web_interface_backend/action_logger.py,
    src/industrial_protocols/industrial_protocols/industrial_protocol_bridge_node.py,
